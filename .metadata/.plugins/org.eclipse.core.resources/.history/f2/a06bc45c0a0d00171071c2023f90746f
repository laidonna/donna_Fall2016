package textExcel;

// Update this file with your own code.

public class Spreadsheet implements Grid{
	private Cell[][] sheet; 
	private String alphabet = "ABCDEFGHIJKL";
	
	public Spreadsheet(){
		sheet = new EmptyCell[20][12];  
		for (int i = 0; i < 20; i++) {
			for (int j = 0; j < 12; j++) {
				sheet[i][j] = new EmptyCell();
			}
		}
	}
	
	@Override
	public String processCommand(String command){
		
		SpreadsheetLocation loca;
		SpreadsheetLocation loc = new SpreadsheetLocation(command);
		int row = loc.getRow();
		int col = loc.getCol();
		
		
		if (command.equals("")){
			return "";
		}
		String[] commandSplit = command.split(" ", 3);
		
		if(commandSplit[0].equalsIgnoreCase("clear")){
			clearCells();
		}
		
		if (command.indexOf("=")>0){
			String [] com = command.split("=");
			String location = com[0].trim();
			String input = com[1].trim();
			loca = new SpreadsheetLocation(location);
			int r = loca.getRow();
			int c = loca.getCol(); 
			sheet[r][c] = new TextCell(input); 
			return getGridText();
		}else if (command.length()<=3){
			Cell getCell = sheet[row][col];
			return getCell.toString();
		}else if((command.indexOf("clear")> 0)&&(command.length()>6)){
			sheet[row][col] = new EmptyCell();
			return getGridText();
		}else if(command.equalsIgnoreCase("clear")){
			for (int i = 0; i < 20; i++) {
				for (int j = 0; j < 12; j++) {
					sheet[i][j] = new EmptyCell();
				}
			}
			return getGridText();
		}
		return "";
	}
	
	public void clearCells(){
		for (int i = 0; i < 20; i++) {
			for (int j = 0; j < 12; j++) {
				sheet[i][j] = new EmptyCell();
			}
		}
	}

	@Override
	public int getRows(){
		int rows = sheet.length;
		return rows;
	}

	@Override
	public int getCols(){
		int columns = sheet[0].length;
		return columns;
	}

	@Override
	public Cell getCell(Location loc){
		int r = loc.getRow();
		int c = loc.getCol();
		return sheet[r][c];
	}

	@Override
	public String getGridText(){
		String firstRow ="   ";
		String newLn = "";
		for(int l = 0; l < sheet[0].length; l++){
			firstRow += "|" + alphabet.charAt(l)+"         ";
		}
		for(int i = 0; i < sheet.length; i++){
			if (i < 9){
				newLn += (i + 1) + "  |" ;
			}else{
				newLn += (i + 1) + " |";
			}
			for(int l = 0; l < sheet[0].length; l++){
				newLn += sheet[i][l].abbreviatedCellText()+ "|";
			}
			newLn+= "\n";
		}
		return firstRow + "\n"  +newLn ; 
	}

}
